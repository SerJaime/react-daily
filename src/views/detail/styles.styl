@import "../../assets/styles/varibles.styl"

.titleWrapper
  overflow: hidden
  position: relative
  padding-bottom: 58.6667%
  background-color: #ddd
  background-repeat: no-repeat
  background-size: 100% auto
  background-position-y: -60px
  h2
    position: absolute
    bottom: px2rem(14)
    padding: px2rem(15)
    line-height: px2rem(22)
    color: $lightTextColor
    font-size: px2rem(19)
    letter-spacing: px2rem(2)
    text-shadow: 0 1px 1px #000
    z-index: 10

.bottomBar
  display: flex
  justify-content: space-between
  align-content: center
  height: 43px
  position: absolute
  bottom: 0
  left: 0
  right: 0
  background-color: #ffffff
  box-shadow: 3px 0 4px #eeeeee
  .btn
    position: relative
    display: block
    line-height: 43px
    padding: 0 6px
    margin: 0 26px
    i
      font-size: 20px
      color: #999999
    .commentTip
      display: inline-block
      position: absolute
      top: 3px
      left: 16px
      line-height: 18px
      padding: 0 8px
      font-weight: 100
      font-size: 12px;
      -webkit-transform-origin-x: 0
      -webkit-transform: scale(0.70)
      background-color: #20b4f1
      color: #ffffff
      -webkit-text-size-adjust:none

    
