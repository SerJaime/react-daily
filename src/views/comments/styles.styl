@import "../../assets/styles/varibles.styl"
@import "../../assets/styles/1pxborder.styl"

.comments
  padding-top: $headerHeight
  padding-bottom: 40px
  .title
    height: 40px
    line-height: 40px
    padding: 0 15px
    borderBottom(#b6b6b6)
    font-size: 16px
    span 
      display: inline-block
      float: right 
      color: #b6b6b6
      &.rotation
        transform: rotate(180deg);
  .shortWrapper
    min-height: 100%

.commentWrapper
  display: flex
  padding: 15px
  box-sizing: border-box
  min-width: 100% 
  borderBottom(#b6b6b6)
  .avatar
    overflow: hidden
    width: 30px
    height 30px
    margin-right: 10px
    border-radius: 50%
    img 
      width: 100%
      height: 100%
  .comment
    flex: 1
    font-size: 13px
    .author
      font-weight: 600
      span 
        display: inline-block
        float: right
        font-weight: 400
        color: #b6b6b6
        i
          font-size: 13px
    .content
      line-height: 18px
      margin: 8px 0 10px 0
    .replyWrapper
      position: relative
      .reply
        line-height: 18px
        margin-bottom: 8px
        color: #b6b6b6
        span 
          font-weight: 600
          color: #000
      .collapse
        position: relative
        max-height: 37px
        overflow: hidden
        &:after
          content: "..."; 
          position: absolute; 
          bottom: 0; 
          right: 0; 
          padding-left: 10px;
          background: -webkit-linear-gradient(left, transparent, #fff 55%);
          background: -o-linear-gradient(right, transparent, #fff 55%);
          background: -moz-linear-gradient(right, transparent, #fff 55%);
          background: linear-gradient(to right, transparent, #fff 55%);

      .collapseBtn
        position: absolute
        top: 100%
        right: 0
        margin-top: 8px
        padding: 3px 6px
        background-color: #d8e4f3
        font-size: 14px
        color: #767676
    .errMsg
      line-height: 18px
      margin-bottom: 8px
      padding: 3px 13px
      color: #b6b6b6
      background-color: #f0f0f0
    .time
      color: #b6b6b6
      font-size: 12px

.bottom
  display: flex
  justify-content: space-between
  align-content: center
  position: absolute
  bottom: 0
  left: 0
  right: 0
  height: 40px
  background-color: #3c3c3c
  .btn
    position: relative
    display: block
    line-height: 43px
    padding: 0 6px
    margin: 0 5px
    i
      font-size: 20px
      color: #999999